{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter './packages/@sanity/*' build",
    "format": "prettier --write --cache --ignore-unknown . && oxlint --type-aware --fix --quiet",
    "lint": "oxlint --type-aware",
    "playground:build": "pnpm --filter './playground/**' build",
    "playground:clean": "pnpm --filter './playground/**' --silent clean",
    "playground:typecheck": "pnpm --filter './playground/**' typecheck",
    "release": "changeset publish",
    "pretest": "pnpm --filter '@sanity/pkg-utils' pretest && pnpm run playground:clean",
    "test": "vitest run",
    "test:update-snapshots": "vitest run --update",
    "test:watch": "vitest",
    "typecheck": "tsc --build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --cache --write",
      "oxlint --type-aware --fix --quiet"
    ],
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@sanity/pkg-utils": "workspace:*",
    "@sanity/prettier-config": "^3.0.0",
    "@sanity/tsconfig": "workspace:*",
    "@sanity/tsdown-config": "workspace:*",
    "@types/node": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.34.0",
    "oxlint-tsgolint": "^0.9.1",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "setup-npm-trusted-publish": "^1.0.3",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.26.0"
}
