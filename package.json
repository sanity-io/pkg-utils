{
  "name": "@sanity/pkg-utils",
  "version": "2.4.8",
  "description": "Simple utilities for modern npm packages.",
  "keywords": [
    "sanity-io",
    "sanity",
    "npm",
    "package",
    "utilities",
    "build",
    "bundling"
  ],
  "homepage": "https://github.com/sanity-io/pkg-utils#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/pkg-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/pkg-utils.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/node/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "source": "./src/node/index.ts",
  "types": "./dist/index.d.ts",
  "bin": {
    "pkg": "./bin/pkg-utils.cjs",
    "pkg-utils": "./bin/pkg-utils.cjs"
  },
  "files": [
    "bin",
    "dist",
    "!dist/stats.html",
    "src"
  ],
  "scripts": {
    "build": "run-s clean build:pkg check:pkg",
    "build:pkg": "node --loader esbuild-register/loader -r esbuild-register scripts/build",
    "check:pkg": "node --loader esbuild-register/loader -r esbuild-register scripts/check",
    "check:types": "tsc --build",
    "clean": "rimraf dist",
    "commit": "cz",
    "extract": "sanity-tsdoc etl --outDir etc/api/@sanity/pkg-utils --tsconfig tsconfig.dist.json",
    "format": "prettier --write --cache --ignore-unknown . && eslint . --ext .cjs,.js,.ts,.tsx --fix --quiet",
    "lint": "eslint . --ext .cjs,.js,.ts,.tsx",
    "playground:build": "pnpm --filter './playground/**' build",
    "playground:clean": "pnpm --filter './playground/**' --silent clean",
    "prepublishOnly": "pnpm run build",
    "release": "semantic-release",
    "test": "run-s playground:clean test:clean vitest:run",
    "test:clean": "rimraf test/env/__tmp__",
    "vitest:run": "vitest run",
    "watch": "node --loader esbuild-register/loader -r esbuild-register scripts/watch"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown",
      "eslint --ext .cjs,.js,.ts,.tsx --fix"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "overrides": [
      {
        "files": [
          "*.json5"
        ],
        "options": {
          "quoteProps": "preserve",
          "singleQuote": false
        }
      },
      {
        "files": [
          "*.yml"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "extends": "@sanity/semantic-release-preset"
  },
  "dependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/types": "^7.22.10",
    "@microsoft/api-extractor": "^7.36.4",
    "@microsoft/tsdoc-config": "^0.16.2",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "browserslist": "^4.21.10",
    "cac": "^6.7.14",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "esbuild": "^0.19.2",
    "esbuild-register": "^3.4.2",
    "find-config": "^1.0.0",
    "get-latest-version": "^5.1.0",
    "git-url-parse": "^13.1.0",
    "globby": "^11.1.0",
    "jsonc-parser": "^3.2.0",
    "mkdirp": "^3.0.1",
    "outdent": "^0.8.0",
    "parse-git-config": "^3.0.0",
    "pkg-up": "^3.1.0",
    "prettier": "^3.0.2",
    "prettier-plugin-packagejson": "^2.4.5",
    "pretty-bytes": "^5.6.0",
    "prompts": "^2.4.2",
    "rimraf": "^4.4.1",
    "rollup": "^3.28.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-preserve-directives": "^0.2.0",
    "rxjs": "^7.8.1",
    "treeify": "^1.1.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@sanity/pkg-utils": "workspace:*",
    "@sanity/semantic-release-preset": "^4.1.3",
    "@types/babel__core": "^7.20.1",
    "@types/cpx": "^1.5.2",
    "@types/find-config": "^1.0.1",
    "@types/git-url-parse": "^9.0.1",
    "@types/node": "^20.5.9",
    "@types/parse-git-config": "^3.0.1",
    "@types/prompts": "^2.4.4",
    "@types/rimraf": "^3.0.2",
    "@types/treeify": "^1.0.0",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "commitizen": "^4.3.0",
    "cpx": "^1.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "outdent": "^0.8.0",
    "recast": "^0.23.4",
    "rollup-plugin-visualizer": "^5.9.2",
    "semantic-release": "^21.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.2",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "peerDependencies": {
    "typescript": "^4.7 || ^5"
  },
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "pnpm": {
    "overrides": {
      "@sanity/pkg-utils": "workspace:*"
    }
  }
}
