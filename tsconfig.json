{
  "extends": "./tsconfig.settings",
  "include": ["./*.cjs", "./*.ts", "./bin", "./package.json", "./scripts", "./src", "./test"],
  "exclude": ["./test/env/__tmp__"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",

    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,

    "baseUrl": "./src",
    "paths": {
      "@sanity/pkg-utils": ["./node"]
    }
  }
}
