{
  "name": "@sanity/pkg-utils",
  "version": "1.3.1",
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "description": "Simple utilities for modern npm packages.",
  "keywords": [
    "sanity-io",
    "sanity",
    "npm",
    "package",
    "utilities",
    "build",
    "bundling"
  ],
  "source": "./src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "pkg-utils": "./bin/pkg-utils"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "node -r esbuild-register src/cli build --extract --tsconfig tsconfig.dist.json",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint . --ext .cjs,.js,.ts",
    "prebuild": "rimraf dist",
    "prepublishOnly": "pnpm run build",
    "release": "semantic-release",
    "test": "vitest run",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@microsoft/api-extractor": "^7.29.5",
    "@microsoft/tsdoc-config": "^0.16.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@sanity/tsdoc-to-portable-text": "^0.4.1",
    "browserslist": "^4.21.3",
    "cac": "^6.7.12",
    "chalk": "^4.1.2",
    "esbuild": "^0.15.5",
    "esbuild-register": "^3.3.3",
    "find-config": "^1.0.0",
    "jsonc-parser": "^3.1.0",
    "mkdirp": "^1.0.4",
    "pkg-up": "^3.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.78.1",
    "rollup-plugin-esbuild": "^4.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@sanity/semantic-release-preset": "^2.0.0",
    "@types/cpx": "^1.5.2",
    "@types/find-config": "^1.0.1",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.7.13",
    "@types/rimraf": "^3.0.2",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "commitizen": "^4.2.5",
    "cpx": "^1.5.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^12.5.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "tmp": "^0.2.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vitest": "^0.22.1"
  },
  "peerDependencies": {
    "typescript": "^4.7"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/pkg-utils.git"
  },
  "bugs": {
    "url": "https://github.com/sanity-io/pkg-utils/issues"
  },
  "homepage": "https://github.com/sanity-io/pkg-utils#readme"
}
