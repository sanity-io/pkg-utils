{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --filter '@sanity/pkg-utils' build",
    "format": "prettier --write --cache --ignore-unknown . && oxlint --type-aware --fix --quiet",
    "lint": "oxlint --type-aware",
    "playground:build": "pnpm --filter './playground/**' build",
    "playground:clean": "pnpm --filter './playground/**' --silent clean",
    "playground:typecheck": "pnpm --filter './playground/**' typecheck",
    "release": "changeset publish",
    "pretest": "pnpm --filter '@sanity/pkg-utils' pretest && pnpm run playground:clean",
    "test": "pnpm --filter '@sanity/pkg-utils' test",
    "test:update-snapshots": "pnpm --filter '@sanity/pkg-utils' test:update-snapshots",
    "typecheck": "tsc --build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "prettier --cache --write",
      "oxlint --type-aware --fix --quiet"
    ],
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.7",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@sanity/pkg-utils": "workspace:*",
    "@sanity/prettier-config": "^1.0.6",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.30.0",
    "oxlint-tsgolint": "^0.8.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.24.0"
}
